{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types/"
        ]
    },
    "exclude": [
        "node_modules",
        "assets"
    ]
}
